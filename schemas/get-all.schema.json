{
  "$schema": "https://json-schema.org/draft-07/schema",
  "type": "object",
  "required": [
    "success",
    "total",
    "content"
  ],
  "properties": {
    "success": {
      "type": "boolean"
    },
    "total": {
      "type": "integer"
    },
    "content": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "description",
          "price"
        ],
        "properties": {
          "id": {
            "type": "integer"
          },
          "description": {
            "type": "string"
          },
          "price": {
            "type": "number"
          }
        }
      }
    }
  }
}
